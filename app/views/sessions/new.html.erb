<section class="login">
  <h2>Log In</h3>
  <form action="<%= session_url %>" method="post">
    <%= render "shared/auth_token" %>
    <label>Username
      <input class="username" type="text" name="user[username]">
    </label>
    <br>
    <label>Password
      <input class="password" type="password" name="user[password]">
    </label>
    <br>
    <button>Log In</button>
  </form>
  <form action="<%= session_url %>" method="post">
    <%= render "shared/auth_token" %>
    <input type="hidden" name="user[username]" value="guest">
    <input type="hidden" name="user[password]" value="password">
    <button>Log In As Guest</button>
  </form>
</section>
